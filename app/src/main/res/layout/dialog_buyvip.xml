<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0fff"
    android:gravity="center">

    <RelativeLayout
        android:background="#0fff"
        android:layout_width="245dp"
        android:layout_height="373dp">

        <LinearLayout
            android:id="@+id/llDHead"
            android:layout_width="245dp"
            android:layout_height="373dp"
            android:background="@mipmap/tk_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginTop="147dp"
                android:text="购买VIP"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ivBuyVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@mipmap/tk_bg_vip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBeforS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥39"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvAfterS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="￥29"
                    android:textColor="@color/nowMoney"
                    android:textSize="16sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/ivBuyPVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tk_icon_zsvip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPBeforS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥499"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvPAfterS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="￥399"
                    android:textColor="@color/nowMoney"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/tk_icon_close" />
    </RelativeLayout>
</RelativeLayout>