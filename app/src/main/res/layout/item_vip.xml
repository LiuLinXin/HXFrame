<?xml version="1.0" encoding="utf-8"?>
<com.csd.activitybase.view.NoInterCeptTouchView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:scaleType="centerCrop"
            android:layout_width="140dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/vip_bg_vip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivIcon"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llStars"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </LinearLayout>

                <TextView
                    android:id="@+id/tvStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="9.5分"
                    android:textColor="@color/orange"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="亚丝娜"
                android:textColor="@color/texcolorDark"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="新海诚/日本/2017"
                android:textColor="@color/texcolorDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="卡时间段福利卡时间了房价撒打开了房间萨洛克的积分卢卡斯剪短发撒绝地反击as发生的纠卡时间段福利卡时间了房价撒打开了房间萨洛克的积分卢卡斯剪短发撒绝地反击as发生的纠卡时间段福利卡时间了房价撒打开了房间萨洛克的积分卢卡斯剪短发撒绝地反击as发生的纠纷阿斯蒂芬斯蒂芬"
                android:textColor="@color/texcolorLight"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvBuyVip"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/clicker_orange"
        android:gravity="center"
        android:text="@string/buyVipToRead"
        android:textColor="@color/white" />

</com.csd.activitybase.view.NoInterCeptTouchView>